---
import Search from "@/components/Search.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import { menuLinks } from "@/site.config";
import { siteConfig } from "../../site.config";
---

<header class="group relative mb-28 flex items-center sm:ps-18" id="main-header">
	<div class="flex sm:flex-col">
		<a
			aria-current={Astro.url.pathname === "/" ? "page" : false}
			class="inline-flex items-center sm:relative sm:inline-block sm:grayscale sm:hover:filter-none"
			href="/"
		>
			<video
                id="logo-video"
                aria-label="true"
                class="
						h-20 w-20 sm:h-32 sm:w-32      /* 尺寸（可換成 h-[125px] w-[125px]） */
						object-contain                      /* 影片完整顯示不裁切 */
						me-3 sm:absolute sm:-start-30 sm:-top-10 sm:me-0  /* 與舊圖相同的定位邏輯 */
						grayscale hover:grayscale-0         /* 滑過轉彩色 */
						transition duration-300 hover:scale-105
						motion-reduce:transition-none       /* 尊重減少動態設定 */
					"
                preload="metadata"
                muted
                playsinline
            >
                <source src="/toothless.webm" type="video/webm" />
                <img src="/toothless.gif" alt={`${siteConfig.title} logo`} />
            </video>
